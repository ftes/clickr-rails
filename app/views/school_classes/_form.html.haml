=# local: true because otherwise errors won't be shown
= form_with model: @school_class, local: true do |f|
  - if @school_class.errors.any?
    #error_explanation
      %h2.title= "#{pluralize(@school_class.errors.count, "error")} prohibited this school_class from being saved:"
      %ul
        - @school_class.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name, class: 'label'
    .control
      = f.text_field :name, class: 'input'
  .actions.buttons
    = f.submit 'Save', class: 'button is-primary'
    = yield
