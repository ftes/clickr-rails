%h1.title Listing questions

%table.table.is-striped.is-hoverable
  %thead
    %tr
      %th School class
      %th Text
      %th

  %tbody
    - @questions.each do |question|
      %tr
        %td= question.school_class&.name
        %td= question.text
        %td
          .buttons.has-addons
            = link_to 'Show', question, class: 'button'
            = link_to 'Edit', edit_question_path(question), class: 'button'
            = link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' }, class: 'button is-danger'

%br

= link_to 'New Question', new_question_path, class: 'button is-primary'
