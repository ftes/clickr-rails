%h1.title= t('.title')

= link_to t('common.new'), new_student_device_mapping_path, class: 'button is-primary'

%table.table.is-striped.is-hoverable
  %thead
    %tr
      %th= t('students.title')
      %th= t('school_classes.title')
      %th= t('devices.device')
      %th= t('devices.device_type')
      %th

  %tbody
    - @student_device_mappings.each do |student_device_mapping|
      %tr
        %td= student_device_mapping.student&.name
        %td= student_device_mapping.school_class&.name
        %td= student_device_mapping.device_id
        %td= student_device_mapping.device_type
        %td
          .buttons
            = link_to t('common.show'), student_device_mapping_path(student_device_mapping), class: 'button'
            = link_to t('common.edit'), edit_student_device_mapping_path(student_device_mapping), class: 'button'
            = link_to t('common.destroy'), student_device_mapping, method: :delete, data: { confirm: t('common.are_you_sure') }, class: 'button is-danger'
