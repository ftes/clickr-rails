%h1.title= t('.title')
= link_to t('common.new'), new_bonus_grade_path, class: 'button is-primary'
%table.table.is-striped.is-hoverable
  %thead
    %tr
      %th= t('students.title')
      %th= t('school_classes.title')
      %th= t('bonus_grades.percentage')
      %th
  %tbody
    - @bonus_grades.each do |bonus_grade|
      %tr
        %td= bonus_grade.student&.name
        %td= bonus_grade.school_class&.name
        %td= number_to_percentage(100.0 * bonus_grade.percentage, precision: 0)
        %td
          .buttons
            = link_to t('common.show'), bonus_grade_path(bonus_grade), class: 'button'
            = link_to t('common.edit'), edit_bonus_grade_path(bonus_grade), class: 'button'
            = link_to t('common.destroy'), bonus_grade, method: :delete, data: { confirm: t('common.are_you_sure') }, class: 'button is-danger'
