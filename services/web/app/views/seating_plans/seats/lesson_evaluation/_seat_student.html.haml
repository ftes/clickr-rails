.seat--student{ style: "grid-row: #{row - row_offset_to_base_1}; grid-column: #{col - col_offset_to_base_1};" }
  .card
    .card-content
      %p.title.has-text-centered= student.name
    %footer.card-footer
      %p.card-footer-item.is-size-4.has-text-weight-bold.has-cursor-help{title: 'TODO i18n Lesson score (percent)'}= number_to_percentage(100.0 * student.question_response_percentage_for(lesson: @lesson), precision: 0)
      -# TODO Show grade
      %p.card-footer-item.is-size-4.has-text-grey.has-cursor-help{title: 'TODO i18n Overall grade (1-6)'} 3
