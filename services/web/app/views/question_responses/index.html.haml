%h1.title= t('.title')
= link_to t('common.new'), new_question_response_path, class: 'button is-primary'
%table.table.is-striped.is-hoverable
  %thead
    %tr
      %th= t('clicks.title')
      %th= t('students.title')
      %th= t('questions.title')
      %th= t('lessons.title')
      %th= t('school_classes.title')
      %th
  %tbody
    - @question_responses.each do |question_response|
      %tr
        %td= question_response.click_id
        %td= question_response.student&.name
        %td= question_response.question&.name
        %td= question_response.lesson&.name
        %td= question_response.school_class&.name
        %td
          .buttons
            = link_to t('common.show'), question_response_path(question_response), class: 'button'
            = link_to t('common.edit'), edit_question_response_path(question_response), class: 'button'
            = link_to t('common.destroy'), question_response, method: :delete, data: { confirm: t('common.are_you_sure') }, class: 'button is-danger'
