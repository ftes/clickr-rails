%h1.title Question responses

%table.table.is-striped.is-hoverable
  %thead
    %tr
      %th Click
      %th Student
      %th Question
      %th Lesson
      %th Class
      %th

  %tbody
    - @question_responses.each do |question_response|
      %tr
        %td= question_response.click
        %td= question_response.student&.name
        %td= question_response.question&.text
        %td= question_response.lesson&.title
        %td= question_response.class&.name
        %td
          .buttons
            = link_to 'Show', lesson, class: 'button'
            = link_to 'Edit', edit_question_response_path(question_response), class: 'button'
            = link_to 'Destroy', question_response, method: :delete, data: { confirm: 'Are you sure?' }, class: 'button is-danger'



= link_to 'New Question response', new_question_response_path, class: 'button is-primary'
